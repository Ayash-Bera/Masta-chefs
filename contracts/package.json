{
  "name": "stealth-swap-contracts",
  "version": "1.0.0",
  "description": "StealthSwap - Privacy-preserving token swaps with fhERC integration",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "test:integration": "hardhat run scripts/test-integration.ts",
    "deploy:localhost": "hardhat run scripts/deploy-stealth-swap.ts --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy-stealth-swap.ts --network sepolia",
    "deploy:baseSepolia": "hardhat run scripts/deploy-stealth-swap.ts --network baseSepolia",
    "deploy:base": "hardhat run scripts/deploy-stealth-swap.ts --network base",
    "deploy:ethereum": "hardhat run scripts/deploy-stealth-swap.ts --network ethereum",
    "verify:sepolia": "hardhat verify --network sepolia",
    "verify:baseSepolia": "hardhat verify --network baseSepolia",
    "verify:base": "hardhat verify --network base",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "prepare": "npm run compile"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "defi",
    "privacy",
    "stealth",
    "1inch",
    "fherc",
    "zk-proofs"
  ],
  "author": "StealthSwap Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.1.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": ">=8.0.0",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.0"
  }
}